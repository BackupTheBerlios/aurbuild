pkgname=aurbuild
pkgver=1.7.9
pkgrel=1
pkgdesc="A utility to build and install packages from AUR."
url="http://developer.berlios.de/projects/aurbuild/"
license="GPL"
arch=('i686' 'x86_64')
depends=('python>=2.4' 'fakeroot' 'versionpkg>=0.7.1')
source=($pkgname-$pkgver.tar.gz)
md5sums=('30dc0367c6cc1d04b5714e8e47ade9e9')

build() {
	cd $startdir/src/$pkgname-$pkgver
	python setup.py install --root=$startdir/pkg
}

